@model TagDetail
@{
    ViewData["Title"] = "Admin_TagDetailEdit";
    Layout = "_AdminLayout";
}
<div id="page-wrapper">
    <form name="myform" asp-action="TagDetailEdit" method="post" enctype="multipart/form-data">
        <div class="form-horizontal">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="TagDetailID" />

            <div class="form-group">
                <label class="col-md-4 control-label">Tag Detail Name</label>
                <div class="col-md-6">
                    <input asp-for="TagDetailName" class="form-control" maxlength="30" />
                    <span asp-validation-for="TagDetailName" class="text-danger" />
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label class="col-md-4 control-label">Tag</label>
                    <div class="col-md-6">
                        @{
                            List<String> tags = ViewBag.Tags;
                            List<String> tagAssigned = ViewBag.TagAssigned;
                            foreach (var item in tags)
                            {
                                <input type="checkbox" name="selectedTag" value="@item" @(Html.Raw(tagAssigned.Contains(item) ? "checked=\"checked\"" : "")) /> <label>@item</label><br />

                            }
                            
                        }

                    </div>
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>

