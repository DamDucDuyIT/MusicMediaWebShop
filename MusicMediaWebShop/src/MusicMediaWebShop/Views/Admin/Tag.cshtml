@model IEnumerable<Tag>
@{
    ViewData["Title"] = "Admin_Tag";
    Layout = "_AdminLayout";
}
<div id="page-wrapper">
    <div class="row" style="margin-bottom:15px">

        <a class="btn btn-success" asp-action="TagAdd" asp-controller="Admin">
            <label>Add New Tag</label>
            <i class="fa fa-plus-circle"></i>
        </a>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Tag
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Tag Name</th>
                                <th>Belong Category</th>
                                <th>Number of Product</th>
                                <th>Number of Tag_Detail</th>                                
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tag in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@tag.TagName</td>
                                    <td><a asp-action="TagCategory" asp-controller="Admin" asp-route-id="@tag.TagID">@tag.CategorySupports.Count</a></td>
                                    <td><a asp-action="TagProduct" asp-controller="Admin" asp-route-id="@tag.TagID">@tag.Products.Count</a></td>
                                    <td><a asp-action="TagSupport" asp-controller="Admin" asp-route-id="@tag.TagID">@tag.TagSupports.Count</a></td>
                                    <td>
                                        <a asp-action="TagEdit" asp-controller="Admin" asp-route-id="@tag.TagID" class="btn btn-sm btn-info">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <a asp-action="TagDelete" asp-controller="Admin" asp-route-id="@tag.TagID" class="btn btn-sm btn-danger">
                                            <i class="fa fa-eraser"></i>
                                        </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>



