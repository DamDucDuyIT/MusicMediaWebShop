@model IEnumerable<ShippingInfo>
@{
    ViewData["Title"] = "Admin_Order";
    Layout = "_AdminLayout";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Order
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Customer Name</th>
                                <th>Phone Number </th>
                                <th>Address</th>
                                <th>Product</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@order.Name</td>
                                    <td>@order.PhoneNumber</td>
                                    <td>@order.HouseNumber, Street: @order.Street, Ward: @order.Ward, District: @order.District, City: @order.City</td>
                                    <td class="center"><a asp-action="OrderDetail" asp-controller="Admin" asp-route-id="@order.ShippingInfoID">View Detail</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>