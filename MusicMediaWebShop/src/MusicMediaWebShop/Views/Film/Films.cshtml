@model IEnumerable<Product>
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Film Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var product in @Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>
                       @Html.Partial("_ProductSummary", product)
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>