@model IEnumerable<Product>
<div class="container">
        <ul class="list-film">

            @foreach (var product in @Model)
            {
                <li class="film-item">
                    <label style="width:100%">@product.ProductName</label>
                    <a style="width:100%" href="detal.html">
                        <img alt="@product.ProductName" src="@product.Productimage"/>
                    </a>
                    <label style="width:100%">
                        @product.Price
                    </label>
                    @Html.Partial("_filmPartial", product)
                    
                </li>
            }
        </ul>
        
</div>