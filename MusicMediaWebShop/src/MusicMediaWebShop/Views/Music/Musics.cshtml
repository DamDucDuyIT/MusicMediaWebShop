@{
}
@model IEnumerable<Product>
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Music Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var product in @Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                </tr>
            }

        </tbody>
    </table>
</div>