@{
}
@model IEnumerable<Product>
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Music Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in @Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Music"
                           asp-action="Index"
                           asp-route-id="@product.ProductID">@product.ProductName</a>
                    </td>
                    <td>@product.Price</td>
                    <td>
                        @Html.Partial("_ProductSummary", product)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>